<div class="page-header">
  <h1>Projects</h1>

  <% admins_only do %>
    <ul>
      <li><%= link_to fa_icon("plus") + " New Project", new_admin_project_path,
        class: "btn btn-success" %></li>
    </ul>
  <% end %>

</div>

<div class="projects">
  <% @projects.each do |project| %>
    <h2><%= link_to project.name, project %></h2>
    <p><%= project.description %></p>
  <% end %>
</div>
